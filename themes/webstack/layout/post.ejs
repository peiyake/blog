<body class="page-body boxed-container">
  <nav class="navbar horizontal-menu navbar-fixed-top">
    <div class="navbar-inner">
      <div class="navbar-brand">
        <a href="/index.html" class="logo">
          <img src="<%= theme.logo.dark %>" width="180px" alt="" class="hidden-xs">
          <img src="<%= theme.logo.expanded %>" width="180px" alt="" class="visible-xs">
        </a>
      </div>
      <div class="navbar-mobile-clear"></div>
      <% if (theme.githubCorner) { %>
      <%- theme.githubCorner %>
      <% } %>
    </div>
  </nav>
  <div class="page-container">
  <h1 id="<%- page.title %>" class="page_title">
    <a href="#<%- page.title %>" class="headerlink" title="<%- page.title %>"></a>
    <%- page.title %>
  </h1>
  <div>
    <em class="page_meta">Written by </em>
    <a itemprop="name" href="<%- config.url %>" rel="author"><%- config.author %></a> 
    <em class="page_meta">,Last update
      <span class="post-time">on 
        <time datetime="<%- page.date %>" itemprop="datePublished"><script>var date = new Date().Format('yy-MM-dd hh:mm');document.write(date);</script></time>
      </span>
    </em>
    <span id="<%- url_for(page.path) %>" class="leancloud_visitors" data-flag-title="<%- page.title %>">
      <em class="post-meta-item-text" style="color:#55555587 !important">,Pageviews:</em>
      <i class="leancloud-visitors-count">loading</i>
    </span>
  </div>
  <hr style="margin-top: 0;border:1;border-top:1px solid #b0a71d !important">
  <%- page.content %>
  <script>
    var dom = document.getElementsByClassName('code');
    for(var i=0,len=dom.length; i<len; i++){
      dom[i].style.width = '750px';
    }
    var dom = document.getElementsByTagName('h1');
    for(var i=0,len=dom.length; i<len; i++){
      dom[i].className  += 'page_title';
    }
    var dom = document.getElementsByTagName('p');
    for(var i=0,len=dom.length; i<len; i++){
      dom[i].style.color = '#303333';
    }
    var dom = document.getElementsByTagName('a');
    for(var i=0,len=dom.length; i<len; i++){
      dom[i].style.color = '#2d96bd';
    }
  </script>

  <br>
  <br>
  <hr>
  <script>
    window.onload = (function(){
        $('pre').addClass('prettyprint linenums').attr('style', 'overflow:auto;');
        prettyPrint(); 
    });
  </script>
  <p>评论区：</p>


  <% if (theme.valine && theme.valine.appid && theme.valine.appkey){ %>
  <section id="comments" class="comments" style="margin-left:0px !important">
    <style>
      .comments{margin:30px;padding:10px;background:#fff}
      @media screen and (max-width:800px){.comments{margin:auto;padding:10px;background:#fff}}
    </style>
    <%- partial('_plugins/valine', {
      key: page.slug,
      title: page.title,
      url: config.url+url_for(page.path)
    }) %>
  </section>
  <% } %>
